# Configuration Backend Rezo
# Copiez ce fichier vers .env et remplissez les valeurs

# Server Configuration
NODE_ENV=development
PORT=5001
BACKEND_URL=http://localhost:5001
FRONTEND_URL=http://localhost:3000

# Production URLs (pour Render/Vercel)
PRODUCTION_FRONTEND_URL=https://mood-music-app-phi.vercel.app

# Database
MONGODB_URI=mongodb://localhost:27017/rezo-db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Magic Link Configuration
MAGIC_LINK_EXPIRY=600000

# Email Configuration
# Option 1: SendGrid (Recommandé - Flexible et gratuit)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=Rezo <noreply@rezo.app>

# Option 2: Resend (Moderne mais limité à votre email)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=Rezo <onboarding@resend.dev>

# Option 3: SMTP (Gmail, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=Rezo <noreply@rezo.app>

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# External APIs
JAMENDO_CLIENT_ID=your_jamendo_client_id_here

# Monitoring (optionnel)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
