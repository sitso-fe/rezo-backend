# Configuration Backend Rezo
# Copiez ce fichier vers .env et remplissez les valeurs

# Server Configuration
NODE_ENV=development
PORT=5001
BACKEND_URL=http://localhost:5001
FRONTEND_URL=http://localhost:3000

# Production URLs (pour Render/Vercel)
PRODUCTION_FRONTEND_URL=https://mood-music-app-phi.vercel.app

# Database
MONGODB_URI=mongodb://localhost:27017/rezo-db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Magic Link Configuration
MAGIC_LINK_EXPIRY=600000

# Email Configuration - Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=Rezo <noreply@rezo.app>

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# External APIs
JAMENDO_CLIENT_ID=your_jamendo_client_id_here

# Monitoring (optionnel)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
