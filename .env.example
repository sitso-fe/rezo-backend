# Configuration de base
NODE_ENV=development
PORT=5000

# Base de données MongoDB
MONGODB_URI=mongodb://localhost:27017/rezo-db
# Ou pour MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/rezo-db

# JWT Secret (générer une clé sécurisée)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Configuration Email (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@rezo.com

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# Magic Link Configuration
MAGIC_LINK_EXPIRY=600000
# 10 minutes en millisecondes
